@model IEnumerable<StoreProcedure.Models.Wendor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <a class="btn btn-sm btn-primary m-2" asp-action="Insert_Wendor" asp-controller="Store">Add Wendor</a>
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>City</th>
                        <th>Pincode</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var d in Model)
                    {
                        <tr class="text-center">
                            <td>@d.Id</td>
                            <td>@d.Name</td>
                            <td>@d.gender</td>
                            <td>@d.city</td>
                            <td>@d.pincode</td>
                            <td>
                                <a class="btn btn-sm btn-success" asp-action="Edit" asp-controller="Store" asp-route-id="@d.Id">
                                    Edit
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Store" asp-route-id="@d.Id">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

